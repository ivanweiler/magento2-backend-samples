<?xml version="1.0" encoding="UTF-8"?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">sample06_news_listing.sample06_news_listing_data_source</item>
        </item>
    </argument>

    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New</label>
            </button>
        </buttons>
        <spinner>sample06_news_columns</spinner>
        <deps>
            <dep>sample06_news_listing.sample06_news_listing_data_source</dep>
        </deps>
    </settings>

    <dataSource name="sample06_news_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">news_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Inchoo_Sample06::news</aclResource>
        <dataProvider class="Inchoo\Sample06\Ui\Component\Listing\DataProvider" name="sample06_news_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>news_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <listingToolbar name="listing_top">
        <settings>
            <sticky>false</sticky>
        </settings>

        <!--
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        -->

        <paging name="listing_paging"/>

    </listingToolbar>

    <columns name="sample06_news_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>news_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="news_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="title">
            <settings>
                <filter>text</filter>
                <label translate="true">Title</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Inchoo\Sample06\Ui\Component\Listing\Column\EditActions">
            <settings>
                <indexField>news_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
